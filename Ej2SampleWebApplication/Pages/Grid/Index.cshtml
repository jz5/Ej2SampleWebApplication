@page
@model Ej2SampleWebApplication.IndexModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf

<div>
    <ejs-grid id="Grid" dataSource="@Model.Items">
        <e-grid-columns>
            <e-grid-column field="Id" headerText="ID"></e-grid-column>
            <e-grid-column field="Name" headerText="Name"></e-grid-column>
            <e-grid-column field="UpdateTime" template="#UpdateTimeTemplate" headerText="Update Time"></e-grid-column>
            <e-grid-column headerText="Status" template="#FlagTemplate"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>

<hr />

<div>
    <button onclick="updateRow(100);">Update row(id:100). How?</button>
</div>

@Html.AntiForgeryToken()

@section Scripts
{
    <script id="UpdateTimeTemplate" type="text/x-template">
        <span>${UpdateTime.toLocaleString()}</span>
    </script>
    <script id="FlagTemplate" type="text/x-template">
        <div>
            ${if (Flag)}
            <span>Active</span>
            ${/if}
        </div>
    </script>

    <script>
        function updateRow(id) {
            $.ajax({
                type: "POST",
                url: "@Href("~/Grid/Index?handler=Update")",
                data: { id: id },
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                headers: {
                    RequestVerificationToken: "@Xsrf.GetAndStoreTokens(HttpContext).RequestToken"
                }
            })
                .done(function (obj) {
                    alert(obj);
                    console.log(obj);
                })
                .fail(function () {
                    alert("error");
                });
        }
    </script>
}

